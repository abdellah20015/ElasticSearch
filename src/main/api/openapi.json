{
  "openapi": "3.0.0",
  "info": {
    "title": "API Import CSV vers Elasticsearch",
    "description": "API pour importer des fichiers CSV et les indexer dans Elasticsearch",
    "version": "1.0.0"
  },
  "paths": {
    "/file/import": {
      "post": {
        "summary": "Téléverser et traiter un fichier CSV",
        "operationId": "importCsvToElasticsearch",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "collection": {
                    "type": "string",
                    "description": "Nom de la collection MongoDB"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fichier CSV traité avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "rowsInserted": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requête invalide",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erreur lors du traitement CSV",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
